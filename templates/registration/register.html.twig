{% extends 'base.html.twig' %}

{% block title %}
  Inscription
{% endblock %}

{% block body %}
  <section class="container">
    <div class="row">
      <div class="col">
        <h1>Inscription</h1>
        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.lastName) }}
        {{ form_row(registrationForm.firstName) }}
        {{ form_row(registrationForm.avatar) }}
        {{ form_row(registrationForm.plainPassword, { label: 'Mot de passe' }) }}
        {{ form_row(registrationForm.RGPDConsent) }}

        <button type="submit" class="btn btn-lg formBtn mt-3">S'inscrire</button>
        <a href="{{ path('app_login') }}" class="btn btn-lg formSecondaryBtn mt-3">Se connecter</a>
        {{ form_end(registrationForm) }}
      </div>
    </div>
  </section>
{% endblock %}
