{% extends 'base.html.twig' %}

{% block title %}
  Modifier un logement
{% endblock %}

{% block body %}
  <main class="container">
    <h1>Modifier un logement</h1>
    <li>
      <a href="{{ path('dwelling_admin_index') }}" class="btn formBtn m-5">Retour menu d'administration des logements</a>
    </li>

    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.adress) }}
    {{ form_row(form.zipcode) }}
    {{ form_row(form.city) }}
    {{ form_row(form.size) }}
    {{ form_row(form.price) }}
    {{ form_row(form.description) }}
    {{ form_row(form.type) }}
    {{ form_row(form.category) }}
    <p>Image actuelle du logement</p>
    {% if form.picture.vars.data %}
      <img src="{{ asset('/uploads/images/' ~ form.picture.vars.data) }}" height="436px" width="680px" />
      <p>{{ form.picture.vars.data }}</p>
      <img src="" alt="" />
    {% endif %}
    {{ form_row(form.picture) }}
    {{ form_end(form) }}
  </main>
{% endblock %}
